<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <Switch
        android:id="@+id/monitorSwitch"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24sp"/>

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/humanIcon_monitor"
        android:layout_toRightOf="@id/monitorSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25.9sp"
        android:layout_marginRight="21sp" />

    <TextView
        android:id="@+id/humanName_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/humanIcon_monitor"
        android:layout_marginBottom="25.5sp"
        android:layout_marginTop="26.5sp"
        android:text="Text"
        android:textSize="12sp"
        android:textColor="#000000" />

</RelativeLayout>