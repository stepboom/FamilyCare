<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/red"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/alert_image_children"

        android:src="@drawable/ic_children_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/alert_image_children"
        android:id="@+id/alert_text_name"
        fontPath="fonts/Roboto-Bold.ttf"
        android:text="Sitthichai Seajie"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/alert_text_lost"
        android:layout_below="@id/alert_text_name"
        android:layout_centerInParent="true"
        android:paddingRight="35dp"
        android:paddingLeft="35dp"
        android:background="@color/dark_red"
        android:textColor="@color/white"
        fontPath="fonts/Roboto-Black.ttf"
        android:textSize="48sp"
        android:text="LOST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/alert_text_description"
        android:text="Turn off notification for this member in this time."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:textAllCaps="false"
        fontPath="fonts/Roboto-Bold.ttf"
        android:textColor="@color/green"
        android:text="Ok. I know."
        android:layout_centerInParent="true"
        android:layout_above="@id/alert_text_description"
        android:id="@+id/alert_button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>